<div id="quote" style="background:url(<%= @quote.image.url -%>); background-size:cover;">
  <div class="quote-bg">
  </div>
  <div class="quote-body">

    <div class="quote-text">
      "<%= @quote.citation %>"
    </div>

    <div class="quote-author">
      <%= @quote.user.first_name %>
      <%= @quote.user.last_name %>

    </div>

    <div class="quote-actions">
      <% if current_user && current_user == @quote.user %>
      <%= link_to 'Edit', edit_quote_path(@quote) %> |
      <%= link_to 'Back', quotes_path %>
    </div>
       <% end %>

  </div>
</div>
