 <% unless @user == current_user %>
 	<% if current_user.following?(@user) %>
 	<%= link_to("Unfollow #{@user.username}", unfollow_user_path(@user), :method => :delete, :remote => true) %>
 <% else %>
 	<%= link_to("Follow #{@user.username}", follow_user_path(@user), class:'btn, btn-primary', :remote => true )%>

	 <% end %>
 <% end %>

